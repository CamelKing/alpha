{
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./typings",
    "lib": ["es2017", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./lib",
    "removeComments": true,
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es2017",
    "typeRoots": ["./node_modules/@types"],
    "watch": false
  },
  "include": [
    "test/**/*.spec.ts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}